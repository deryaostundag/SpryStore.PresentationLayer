@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<style>
    img {
        border-radius:50%;
    }
</style>
<h1>Kullanıcı Listesi</h1>
<table class="table table-hover">
    <tr>
        <td>#</td>
        <td>Ad</td>
        <td>Soyad</td>
        <td>Şehir</td>
        <td>Detaylar</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.ImageUrl" style="width:50px; height:50px;" /></td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

