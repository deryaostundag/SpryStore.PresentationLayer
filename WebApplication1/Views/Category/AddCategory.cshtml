@model Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>AddCategory</h1>
<form method="post">
    <label>Kategori Adı</label>
    <input type="text" class="form-control" asp-for="CategoryName" />
    <br />
    <label>Kategori Açıklaması</label>
    <input type="text" class="form-control" asp-for="CategoryDescription" />
    <br />
    <label>Kategori Görsel</label>
    <input type="text" class="form-control" asp-for="CategoryImage" />
    <br />
    <button class="btn btn-info">Kategori Ekle</button>
</form>
